{
  "name": "userscripts",
  "version": "1.0.0",
  "description": "A userscript for customizing fonts on websites using CSS variables and Google Fonts with fallbacks to system fonts. Works with both Tampermonkey and Userscripts.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && node scripts/build.js",
    "release": "node scripts/release.js bump patch",
    "release:minor": "node scripts/release.js bump minor",
    "release:major": "node scripts/release.js bump major",
    "release:dryrun": "node scripts/release.js bump patch --dryrun",
    "version:set": "node scripts/release.js set",
    "version:reset": "node scripts/release.js reset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flinhong/userscripts.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/flinhong/userscripts/issues"
  },
  "homepage": "https://github.com/flinhong/userscripts#readme",
  "devDependencies": {
    "semver": "^7.7.3"
  }
}