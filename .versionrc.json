{
  "types": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "chore", "hidden": true },
    { "type": "style", "hidden": true },
    { "type": "docs", "hidden": true },
    { "type": "refactor", "hidden": true },
    { "type": "perf", "hidden": true },
    { "type": "test", "hidden": true }
  ],
  "tagPrefix": "v",
  "skip": {
    "changelog": true,
    "tag": true
  },
  "scripts": {
    "postbump": "node scripts/build.js && git add package.json package-lock.json public/ && git commit -m \"chore: release $(node -p \"require('./package.json').version\")\""
  }
}
